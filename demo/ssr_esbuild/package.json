{
  "private": true,
  "name": "ssr-esbuild",
  "type": "module",
  "scripts": {
    "dev": "monex --watch server src --exec 'npm run build && npm run start'",
    "build:client": "esbuild src/index.tsx --bundle --outfile=dist/client/index.js --format=esm",
    "build:server": "esbuild server/index.tsx --bundle --outfile=dist/server/index.cjs --format=cjs --platform=node",
    "build": "npm run build:client && npm run build:server",
    "start": "node ./dist/server/index.cjs"
  },
  "dependencies": {
    "linkedom-global": "^1.0.0",
    "noren": "^0.2.0",
    "voby": "*",
    "voby-simple-router": "^1.0.0"
  },
  "devDependencies": {
    "esbuild": "0.17.11",
    "monex": "^2.0.0"
  }
}
