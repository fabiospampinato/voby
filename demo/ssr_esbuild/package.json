{
  "private": true,
  "name": "ssr-esbuild",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "dev:build:client": "esbuild ./src/index.tsx --bundle --outfile=dist/client/index.js --format=esm",
    "dev:build:server": "esbuild ./server/index.tsx --bundle --outfile=dist/server/index.js --format=esm --platform=node --packages=external",
    "dev:build": "scex -bs dev:build:client dev:build:server",
    "dev:start": "node ./dist/server/index.js",
    "dev": "monex --delay 50 --name client server start --watch src server server --exec npm:dev:build:client npm:dev:build:server npm:dev:start",
    "prod:build:client": "esbuild ./src/index.tsx --bundle --outfile=dist/client/index.js --format=esm --minify",
    "prod:build:server": "esbuild ./server/index.tsx --bundle --outfile=dist/server/index.js --format=esm --platform=node --minify",
    "prod:build": "scex -bs clean prod:build:client prod:build:server",
    "prod:start": "NODE_ENV=production node ./dist/server/index.js",
    "prod": "scex -bs clean prod:build:client prod:build:server prod:start"
  },
  "dependencies": {
    "linkedom-global": "^1.0.0",
    "noren": "^0.3.0",
    "voby": "*",
    "voby-simple-router": "^1.0.0"
  },
  "devDependencies": {
    "esbuild": "0.17.11",
    "monex": "^2.1.1",
    "scex": "^1.1.0"
  }
}
